{
  "compileOnSave": true,
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es2018",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "lib": ["es2018", "esnext.asynciterable"],
    "baseUrl": "./",
    "paths": {},
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
